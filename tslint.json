{
  "extends": "tslint:recommended",
  "rules":
  {
    "indent": [
      "error",
      2
    ],
    "no-var-requires": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "trailing-comma": false,
    "no-console": false,
    "max-line-length": [
      false
    ],
    "class-name": false
  }
}
